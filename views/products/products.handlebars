<section class="products">
    <div class="product-cate">
        <ul class="cate-responsive">
            <li class="cate-title">
                <span>Category</span>
            </li>
            <ul class="cate-list">
                {{#each cat}}
                <li><a href="/products/category/{{this.id}}" {{#if this.show}} class="bold" {{/if}}>{{this.category}}</a></li>
                {{/each}}
                <li><a href="/products">View All</a></li>
            </ul>
        </ul>
    </div>
    <div class="product-list">
        <form class="products-search-form" method="POST" action="/products/productsPage/search">
            <label>Search By</label>
            <select class="products-select" name="products-search">
                <option value="all">All Products</option>
                {{#each cat}}
                <option value="{{this.category}}" {{#if this.select}} selected {{/if}}>{{this.category}}</option>
                {{/each}}
            </select>
            <input class="product-search-button" type="submit" value="Search">
        </form>
        <h2>Product List: </h2>
        <div class="product-item-container">
            {{#each productList}}
            <div class="product-item">
                <a href="/productDescription/{{this.id}}"><img src="/uploads/{{this.productImg}}"
                        alt={{this.title}}></a>
                <p>
                    {{this.title}}<br>
                    Category: {{this.category}}<br>
                    Price: ${{this.price}} <span class={{this.showBestSeller}}>&#10004;Bestseller</span>
                </p>
            </div>
            {{/each}}
            {{#if notmatch}}
            <p>No Mathc Result</p>
            {{/if}}
        </div>
    </div>
</section>