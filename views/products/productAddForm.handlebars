<section class="infoForm">
<h1> Add Product</h1>

<form class="reg-form" method="POST" action="/product/add">
    <label for="title">Product Name</label> <br>
    <input type="text" name="title" id="title"> <br><br>

    <label>Category</label> <br>
    <select name="categoty">
            <option value="Valentine's Gift">Valentine's Gift</option>
            <option value="Electronics & Accessories">Electronic &amp; Accessories</option>
            <option value="Home">Home</option>
            <option value="Fitness">Fiitness</option>
    </select> <br><br>

    <label for="price">Price</label> <br>
    <input type="number" name="price" id="price" min="0.00" step="0.01"> <br><br>

    <label for="inventory">Inventory</label> <br>
    <input type="number" name="inventory" id="inventory" min="0"> <br><br>

    <label for="bestSeller">BestSeller</label>
    <input type="checkbox" id="bestSeller" name="bestSeller"> <br><br>

    <label>Product Image Upload</label> <br>
    <input type="file" name="productImage"> <br><br>

    <input type="submit" values="Add Product">

</form>

</section>