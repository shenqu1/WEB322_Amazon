<section class="productDash">
    <h1>Products Dashboard</h1>

    <form class="products-search-form" method="POST" action="/products/search">
        <label>Search By</label>
        <select class="products-select" name="products-search">
            <option value="All Products">All Products</option>
            <option value="Valentine's Gift" {{#matchSelect search "Valentine's Gift"}}{{/matchSelect}}>Valentine's Gift</option>
            <option value="Electronic & Accessories" {{#matchSelect search "Electronic & Accessories"}}{{/matchSelect}}>Electronic &amp; Accessories</option>
            <option value="Home" {{#matchSelect search "Home"}}{{/matchSelect}}>Home</option>
            <option value="Fiitness" {{#matchSelect search "Fiitness"}}{{/matchSelect}}>Fiitness</option>
        </select>
        <input class="product-search-button" type="submit" value="Search">
    </form>
    <div id="product-links-holder">
        <a href="/product/add">Add a product</a>
    </div>
    <div class="products-table">
        <table border="1">
            <thread>
                <th>Title</th>
                <th>Image</th>
                <th>Category</th>
                <th>Price</th>
                <th>Inventory</th>
                <th>Bestseller</th>
                <th>Operation</th>
            </thread>
            <tbody>
                {{#each productList}}
                <tr>
                    <td>
                        <span>{{this.title}}</span>
                    </td>
                    <td>
                        <img src="/uploads/{{this.productImg}}" alt="{{this.title}}">
                    </td>
                    <td>
                        <span>{{this.category}}</span>
                    </td>
                    <td>
                        <span>{{this.price}}</span>
                    </td>
                    <td>
                        <span>{{this.inventory}}</span>
                    </td>
                    <td>
                        <span>{{this.bestSeller}}</span>
                    </td>
                    <td>
                        <a href="" class="edit-delete-button">Edit</a> <br><br>
                        <a href="" class="edit-delete-button">Delete</a>
                    </td>
                </tr>
                {{else}}
                <td colspan="7">
                    <p>No products in the database</p>
                </td>
                {{/each}}
            </tbody>
        </table>
    </div>


</section>