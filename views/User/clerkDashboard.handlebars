<section class="userDashBoard">
<h1>Welcome {{user.name}}</h1> <br>
<!-- User Profile-->
<img src="/uploads/{{user.userImg}}">
<form  class="userProfile" method="POST" action="/user/profile/update/{{user._id}}?method=PUT" enctype="multipart/form-data">
<label>User Image Upload</label><br><br>
<input type="file" name="userImg" id="userImg"><br>
{{#if error}}
    <p class="errors">{{error}}</p>
{{/if}}
<input type="submit" value="Update Image"><br>
</form>


<div class="proDashLink">
    <a href="/productDashboard">Product Dashboard</a>
</div>

</section>